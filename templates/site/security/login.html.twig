{% extends 'site/base.html.twig' %}

{% block page_content %}

    <form action="{{ path("security__login") }}" method="post" role="form">

        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {{ form_row(form._token) }}

        <label for="inputUsername">{{ 'form.username'|transWithContext(translationContext) }}</label>
        <input
                type="text"
                value="{{ form.username.vars.value }}"
                name="{{ form.username.vars.full_name }}"
                id="inputUsername"
                class="form-control"
                required
                autofocus
        >

        <label for="inputPassword">{{ 'form.password'|transWithContext(translationContext) }}</label>
        <input
                type="password"
                name="{{ form.password.vars.full_name }}"
                id="inputPassword"
                class="form-control"
                required
        >

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me">
                {{ 'form.rememberMe'|transWithContext(translationContext) }}
            </label>
        </div>

        <button class="btn mr-btn mr-btn-dark" type="submit">
            {{ 'form.signIn'|transWithContext(translationContext) }}
        </button>
    </form>

{% endblock %}
